{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
    },
  },
  "include": [
    "deploy",
    "typechain-types",
    "utils",
    "test",
    "tasks",
    "scripts",
    "deployments",
    "hardhat.config.ts"
  ]
}
